<Window x:Class="ListFile1.PresentationWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ListFile1.PresentationWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <DataGrid AutoGenerateColumns="True" Visibility="Collapsed">
                
            </DataGrid>
            <ListView>
                <ListView.View>
                    <GridView>
                        <GridViewColumn Width="300" >Приз</GridViewColumn>
                        <GridViewColumn DisplayMemberBinding="{Binding Path=Company}" Width="100">Количество</GridViewColumn>
                    </GridView>
                </ListView.View>
                <ListView.Resources>
                </ListView.Resources>
            </ListView>
            <Button Content="Сохранить"/>
        </StackPanel>
    </Grid>
</Window>
